@model Selling.ViewModel.MstUserViewModel
@{
    ViewBag.Title = "Login Selling";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@*<h2>Index</h2>
<h3>Hasil Redirecting dari Home</h3>*@

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Username, new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Username, new {@class = "control-label"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" }) <!---->
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Password, new { @class = "control-label" })
            </div>
        </div>
        <button id="idBtnLogin" type="button" class="btn btn-primary btnLogin pull-right">
            Login
        </button> 

        
    </div>
}

<script>
    $('#idBtnLogin').click(function (){
        var vUserName = $("#Username").val();
        var vPassword = $("#Password").val();
        $.ajax({
            url: '/Login/Login',
            type: 'POST',
            data: {
                Username: vUserName,
                Password: vPassword
            },
            success: function (model) {
                window.location.href = '/Home/Index';
            }
        });
    });
</script>